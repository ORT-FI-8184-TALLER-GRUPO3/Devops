{
  "family": "backend-services",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "products-service-example",
      "image": "<ecr_registry_url>/products-service-example:latest",
      "essential": true,
      "memory": 512,
      "cpu": 256,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ]
    },
    {
      "name": "shipping-service-example",
      "image": "<ecr_registry_url>/shipping-service-example:latest",
      "essential": true,
      "memory": 512,
      "cpu": 256,
      "portMappings": [
        {
          "containerPort": 8081,
          "hostPort": 8081
        }
      ]
    },
    {
      "name": "payments-service-example",
      "image": "<ecr_registry_url>/payments-service-example:latest",
      "essential": true,
      "memory": 512,
      "cpu": 256,
      "portMappings": [
        {
          "containerPort": 8082,
          "hostPort": 8082
        }
      ]
    },
    {
      "name": "orders-service-example",
      "image": "<ecr_registry_url>/orders-service-example:latest",
      "essential": true,
      "memory": 512,
      "cpu": 256,
      "portMappings": [
        {
          "containerPort": 8083,
          "hostPort": 8083
        }
      ]
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "memory": "4GB",
  "cpu": "1024"
}
