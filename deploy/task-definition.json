{
  "family": "backend-services",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "products-service-example",
      "image": "${ECR_REGISTRY_URL}/products-service-example:${IMAGE_TAG}",
      "essential": true,
      "memory": 512,
      "cpu": 256,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ]
    },
  {
      "name": "shipping-service-example",
      "image": "${ECR_REGISTRY_URL}/shipping-service-example:${IMAGE_TAG}",
      "essential": true,
      "memory": 512,
      "cpu": 256,
      "portMappings": [
        {
          "containerPort": 8081,
          "hostPort": 8081
        }
      ]
    },
    {
      "name": "payments-service-example",
      "image": "${ECR_REGISTRY_URL}/payments-service-example:${IMAGE_TAG}",
      "essential": true,
      "memory": 512,
      "cpu": 256,
      "portMappings": [
        {
          "containerPort": 8082,
          "hostPort": 8082
        }
      ]
    },
    {
      "name": "orders-service-example",
      "image": "${ECR_REGISTRY_URL}/orders-service-example:${IMAGE_TAG}",
      "essential": true,
      "memory": 512,
      "cpu": 256,
      "portMappings": [
        {
          "containerPort": 8083,
          "hostPort": 8083
        }
      ]
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "memory": "4GB",
  "cpu": "1024"
}
